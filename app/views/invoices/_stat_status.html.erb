<h3><%= "#{l(:label_invoice_status)}#{' - ' + @invoice.contact.name.strip if @invoice && @invoice.contact}"  %></h3>
<table class="invoices-stat statuses">
  <tr>
    <th>
      <span class="status-badge invoice-status draft" >
        <%= link_to "#{l(:label_invoice_status_draft)}#{'(' + @draft_status_count.to_s + ')' if @draft_status_count > 0 }", invoice_status_url(Invoice::DRAFT_INVOICE, :contact_id => @invoice && @invoice.contact) %>
      </span>
    </th>
    <td class="sum"><%= prices_collection_by_currency(@draft_status_sum, :hide_zeros => true).join('<br/>').html_safe %></td>
  </tr>
  <tr>
    <th>
      <span class="status-badge invoice-status estimate" >
			  <%= link_to "#{l(:label_invoice_status_estimate)}#{'(' + @estimate_status_count.to_s + ')' if @estimate_status_count > 0 }", invoice_status_url(Invoice::ESTIMATE_INVOICE, :contact_id => @invoice && @invoice.contact)  %>
      </span>
    </th>
    <td class="sum"><%= prices_collection_by_currency(@estimate_status_sum, :hide_zeros => true).join('<br/>').html_safe %></td>
  </tr>
  <tr>
    <th>
    <span class="status-badge invoice-status sent" >
		  <%= link_to "#{l(:label_invoice_status_sent)}#{'(' + @sent_status_count.to_s + ')' if @sent_status_count > 0 }", invoice_status_url(Invoice::SENT_INVOICE, :contact_id => @invoice && @invoice.contact) %> 
    </span>
    </th>
    <td class="sum"><%= prices_collection_by_currency(@sent_status_sum, :hide_zeros => true).join('<br/>').html_safe %></td>
  </tr>
  <tr>
    <th>
    <span class="status-badge invoice-status paid" >
      <%= link_to "#{l(:label_invoice_status_paid)}#{'(' + @paid_status_count.to_s + ')' if @paid_status_count > 0 }", invoice_status_url(Invoice::PAID_INVOICE, :contact_id => @invoice && @invoice.contact) %> 
    </span>
    </th>
    <td class="sum"><%= prices_collection_by_currency(@paid_status_sum, :hide_zeros => true).join('<br/>').html_safe %></td>
  </tr>
  <tr>
    <th>
    <span class="status-badge invoice-status canceled" >
		  <%= link_to "#{l(:label_invoice_status_canceled)}#{'(' + @canceled_status_count.to_s + ')' if @canceled_status_count > 0 }", invoice_status_url(Invoice::CANCELED_INVOICE, :contact_id => @invoice && @invoice.contact) %> 
    </span>
    </th>
    <td class="sum"><%= prices_collection_by_currency(@canceled_status_sum, :hide_zeros => true).join('<br/>').html_safe %></td>
  </tr>

</table>
